@page "/"
@inject IJSRuntime JS
@rendermode InteractiveServer
@using FastCanvas.Library

<PageTitle>Home</PageTitle>

<h1>Canvas Demo</h1>

<canvas id="myCanvas" width="500" height="500" style="border:1px solid #000;" tabindex="1" />

@code {
    private FastCanvas fc = new FastCanvas();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        fc.fillStyle = "red";
        fc.fillRect(200, 200, 50, 150);



        await JS.InvokeVoidAsync("fastCanvasDraw", "myCanvas", fc.Draw);
    }
}
